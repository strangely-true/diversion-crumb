# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"
JWT_SECRET="change-me-to-a-random-string"

# ── URLs ─────────────────────────────────────────────────────────────────────
# IMPORTANT: Set these to your Vercel deployment URL (e.g. https://your-app.vercel.app)
# VAPI cloud calls the server tool webhook at NEXT_PUBLIC_API_BASE_URL/api/vapi/tools
# — localhost will NOT work because VAPI servers cannot reach your machine.
NEXT_PUBLIC_API_BASE_URL="https://your-app.vercel.app"
APP_BASE_URL="https://your-app.vercel.app"
CORS_ALLOWED_ORIGINS="https://your-app.vercel.app"

# ── Auth0 ────────────────────────────────────────────────────────────────────
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
# Generate with: openssl rand -hex 32
AUTH0_SECRET=your_64_char_random_hex_string
AUTH0_BASE_URL="https://your-app.vercel.app"

# ── Vapi Voice Agent ─────────────────────────────────────────────────────────
NEXT_PUBLIC_VAPI_PUBLIC_KEY=your_vapi_public_key
VAPI_PRIVATE_KEY=your_vapi_private_key
# Optional: pre-created assistant ID from Vapi dashboard (leave as-is to use inline config)
NEXT_PUBLIC_VAPI_ASSISTANT_ID=your_vapi_assistant_id_here

# ── Google Gemini (knowledge search) ─────────────────────────────────────────
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key

# ── Resend (escalation emails) ───────────────────────────────────────────────
RESEND_API_KEY=your_resend_api_key
SUPPORT_EMAIL=support@example.com
